<% layout('layouts/boilerplate.ejs') %>
<!-- Hero Section -->
<main>
  <!-- About Section -->
  <section id="about" class="py-5">
    <div class="container">
      <h2 class="text-center mb-4">About Our Campgrounds</h2>
      <p class="text-center lead">
        We offer a curated selection of the best campgrounds to ensure you have an unforgettable outdoor experience. Whether you're looking for serene forests or vibrant lakesides, we have something for everyone.
      </p>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="bg-light py-5">
    <div class="container">
      <h2 class="text-center mb-4">Why Choose Us?</h2>
      <div class="row text-center">
        <div class="col-lg-4 mb-4">
          <div class="card border-0 shadow-sm">
            <div class="card-body">
              <i class="fas fa-tree fa-3x mb-3 text-success"></i>
              <h3 class="card-title">Beautiful Locations</h3>
              <p class="card-text">From mountain views to lakeside campsites, we have a variety of stunning locations to suit your preferences.</p>
            </div>
          </div>
        </div>
        <div class="col-lg-4 mb-4">
          <div class="card border-0 shadow-sm">
            <div class="card-body">
              <i class="fas fa-fire fa-3x mb-3 text-danger"></i>
              <h3 class="card-title">Modern Facilities</h3>
              <p class="card-text">Enjoy modern amenities including clean restrooms, picnic areas, and well-maintained trails.</p>
            </div>
          </div>
        </div>
        <div class="col-lg-4 mb-4">
          <div class="card border-0 shadow-sm">
            <div class="card-body">
              <i class="fas fa-star fa-3x mb-3 text-warning"></i>
              <h3 class="card-title">Top-Rated Experience</h3>
              <p class="card-text">Our campgrounds are highly rated by outdoor enthusiasts for their beauty, cleanliness, and overall experience.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-5">
    <div class="container">
      <h2 class="text-center mb-4">Get in Touch</h2>
      <form action="#" method="post">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" required>
          </div>
          <div class="col-12 mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-dark btn-lg">Send Message</button>
          </div>
        </div>
      </form>
    </div>
  </section>
</main>